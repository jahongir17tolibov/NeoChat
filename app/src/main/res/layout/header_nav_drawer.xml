<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/header_dark_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/header_users_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:src="@drawable/ic_launcher_background"
            app:shapeAppearanceOverlay="@style/ShapedImage_round" />

        <ImageView
            style="@style/dark_light_icon_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|end" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_users_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steven Spellberg"
                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                android:textSize="20sp"
                android:textColor="@color/text_dark_light_all"/>

            <TextView
                android:id="@+id/email_or_gmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+998909001755"
                android:textSize="14sp"
                android:textColor="@color/text_dark_light_all"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            app:tint="@color/text_dark_light_all"
            android:layout_gravity="center_vertical"
            android:layout_margin="8dp"
            android:background="?selectableItemBackgroundBorderless"/>

    </LinearLayout>


</LinearLayout>